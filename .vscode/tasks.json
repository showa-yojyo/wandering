{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve: Run Jekyll server",
            "type": "shell",
            "command": "touch index.html archive.html && bundle exec jekyll serve --incremental --watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Optimize PNG files",
            "type": "shell",
            "command": "optipng",
            "args": [
                "assets/images/*.png"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Update Gemfile.lock: execute `bundle update`",
            "type": "shell",
            "command": "bundle update",
            "group": {
                "kind": "build",
                "isDefault": false
            },
        }
    ]
}
